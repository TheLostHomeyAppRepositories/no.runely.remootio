{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "no.runely.remootio",
  "version": "1.1.2",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#ed6517",
  "name": {
    "en": "Remootio"
  },
  "description": {
    "en": "Make your garage doors and gates smart",
    "no": "Gjør dine garasjeporter smarte"
  },
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Rune Moskvil Lyngås",
    "email": "runely85@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/runely/remootio-homey/issues"
  },
  "source": "https://github.com/runely/remootio-homey",
  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Left open",
          "no": "Stått åpen"
        },
        "hint": {
          "en": "Triggered when garage door has been left open for the specified duration set in 'Notify if left open' setting in the Remootio app (minimum value 5 minutes)",
          "no": "Utløses når garasjeporten har stått åpen i den angitte varigheten satt i 'Notify if left open' innstillingen i Remootio appen (minsteverdi er 5 minutter)"
        },
        "tokens": [
          {
            "type": "string",
            "name": "name",
            "title": {
              "en": "Device name",
              "no": "Enhetsnavn"
            }
          },
          {
            "type": "number",
            "name": "duration",
            "title": {
              "en": "Duration",
              "no": "Varighet"
            }
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "class_id=garagedoor"
          }
        ],
        "id": "left_open"
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Remootio"
      },
      "discovery": "remootio",
      "class": "garagedoor",
      "capabilities": [
        "garagedoor_closed"
      ],
      "images": {
        "small": "/drivers/remootio-v3/assets/images/small.png",
        "large": "/drivers/remootio-v3/assets/images/large.png",
        "xlarge": "/drivers/remootio-v3/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "login_credentials",
          "template": "login_credentials",
          "options": {
            "usernameLabel": {
              "en": "API Secret Key"
            },
            "usernamePlaceholder": {
              "en": "API Secret Key"
            },
            "passwordLabel": {
              "en": "API Auth Key"
            },
            "passwordPlaceholder": {
              "en": "API Auth Key"
            }
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "remootio-v3",
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Connection settings",
            "no": "Tilkoblingsinnstillinger"
          },
          "children": [
            {
              "id": "ipaddress",
              "type": "text",
              "label": {
                "en": "IP Address",
                "no": "IP-adresse"
              },
              "value": "",
              "hint": {
                "en": "IP Address to your Remootio",
                "no": "IP-adressen til Remootio"
              }
            },
            {
              "id": "secretKey",
              "type": "text",
              "label": {
                "en": "API Secret Key"
              },
              "value": "",
              "hint": {
                "en": "API Secret Key to your Remootio",
                "no": "API Secret Key til Remootio"
              }
            },
            {
              "id": "authKey",
              "type": "text",
              "label": {
                "en": "API Auth Key"
              },
              "value": "",
              "hint": {
                "en": "API Auth Key to your Remootio",
                "no": "API Auth Key til Remootio"
              }
            },
            {
              "id": "maxReconnectRetries",
              "type": "number",
              "label": {
                "en": "Max reconnect retries",
                "no": "Maks tilkoblingsforsøk"
              },
              "min": 0,
              "max": 100,
              "value": 3,
              "hint": {
                "en": "Max number of retries for reconnect when disconnected",
                "no": "Maks antall tilkoblingsforsøk når Remootio har blitt frakoblet"
              }
            },
            {
              "id": "autoreconnect",
              "type": "number",
              "label": {
                "en": "Auto reconnect every X minutes",
                "no": "Tilkoble automatisk hver X minutter"
              },
              "min": 0,
              "max": 60,
              "value": 5,
              "hint": {
                "en": "Auto reconnect every X minutes (when not connected). If set to 0, auto reconnecion will not be performed",
                "no": "Tilkoble automatisk hver X minutter (når ikke tilkoblet). Hvis satt til 0 vil automatisk tilkoblingsforsøk ikke utføres"
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Device settings",
            "no": "Enhetsinnstillinger"
          },
          "children": [
            {
              "id": "logicFlipped",
              "type": "checkbox",
              "label": {
                "en": "Is sensor logic flipped",
                "no": "Er sensorlogikken reversert"
              },
              "value": false,
              "hint": {
                "en": "If you have flipped the sensor logic on your Remootio, turn this on",
                "no": "Dersom du har reversert sensorlogikken i Remootio, aktiver denne"
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Hardware information",
            "no": "Maskinvareinformasjon"
          },
          "children": [
            {
              "id": "apiVersion",
              "type": "number",
              "label": {
                "en": "API version",
                "no": "API-versjon"
              },
              "hint": {
                "en": "API version installed on Remootio device",
                "no": "API-versjon installert på Remootio enhet"
              }
            },
            {
              "id": "serialNumber",
              "type": "text",
              "label": {
                "en": "Serial number",
                "no": "Serienummer"
              },
              "hint": {
                "en": "Serial number on Remootio device",
                "no": "Serienummer på Remootio enhet"
              }
            },
            {
              "id": "remootioVersion",
              "type": "text",
              "label": {
                "en": "Remootio version",
                "no": "Remootio versjon"
              },
              "hint": {
                "en": "Remootio version",
                "no": "Remootio versjon"
              }
            }
          ]
        }
      ]
    }
  ],
  "discovery": {
    "remootio": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "remootio",
        "protocol": "tcp"
      },
      "id": "{{name}}"
    }
  }
}