{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "no.runely.remootio",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "Remootio"
  },
  "description": {
    "en": "Control your Remootio device with Homey"
  },
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Rune Moskvil Lyngås",
    "email": "runely85@gmail.com"
  },
  "drivers": [
    {
      "name": {
        "en": "Remootio"
      },
      "discovery": "remootio",
      "class": "garagedoor",
      "capabilities": [
        "garagedoor_closed"
      ],
      "images": {
        "small": "/drivers/remootio-v3/assets/images/small.png",
        "large": "/drivers/remootio-v3/assets/images/large.png",
        "xlarge": "/drivers/remootio-v3/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "login_credentials",
          "template": "login_credentials",
          "options": {
            "usernameLabel": {
              "en": "API Secret Key"
            },
            "usernamePlaceholder": {
              "en": "API Secret Key"
            },
            "passwordLabel": {
              "en": "API Auth Key"
            },
            "passwordPlaceholder": {
              "en": "API Auth Key"
            }
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "remootio-v3",
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Connection settings",
            "no": "Tilkoblingsinnstillinger"
          },
          "children": [
            {
              "id": "ipaddress",
              "type": "text",
              "label": {
                "en": "IP Address",
                "no": "IP-adresse"
              },
              "value": "",
              "hint": {
                "en": "IP Address to your Remootio",
                "no": "IP-adressen til Remootio"
              }
            },
            {
              "id": "secretKey",
              "type": "text",
              "label": {
                "en": "API Secret Key"
              },
              "value": "",
              "hint": {
                "en": "API Secret Key to your Remootio",
                "no": "API Secret Key til Remootio"
              }
            },
            {
              "id": "authKey",
              "type": "text",
              "label": {
                "en": "API Auth Key"
              },
              "value": "",
              "hint": {
                "en": "API Auth Key to your Remootio",
                "no": "API Auth Key til Remootio"
              }
            },
            {
              "id": "maxReconnectRetries",
              "type": "number",
              "label": {
                "en": "Max reconnect retries",
                "no": "Maks tilkoblingsforsøk"
              },
              "min": 0,
              "max": 100,
              "value": 3,
              "hint": {
                "en": "Max number of retries for reconnect when disconnected",
                "no": "Maks antall tilkoblingsforsøk når Remootio har blitt frakoblet"
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Device settings",
            "no": "Enhetsinnstillinger"
          },
          "children": [
            {
              "id": "logicFlipped",
              "type": "checkbox",
              "label": {
                "en": "Is sensor logic flipped",
                "no": "Er sensorlogikken reversert"
              },
              "value": false,
              "hint": {
                "en": "If you have flipped the sensor logic on your Remootio, turn this on",
                "no": "Dersom du har reversert sensorlogikken i Remootio, aktiver denne"
              }
            }
          ]
        }
      ]
    }
  ],
  "discovery": {
    "remootio": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "remootio",
        "protocol": "tcp"
      },
      "id": "{{txt.id}}"
    }
  }
}